# API設定
API_HOST=0.0.0.0
API_PORT=8000

# CORS設定
CORS_ORIGINS=["http://localhost:3000"]

# データベース設定
# SQLite (開発用)
DATABASE_URL=sqlite:///./shinwa_agent.db
# PostgreSQL (本番用)
# DATABASE_URL=postgresql://user:password@localhost/shinwa_agent

# Redis設定
REDIS_URL=redis://localhost:6379/0

# OpenAI設定（Manus組み込みAI）
# 環境変数から自動的に読み込まれます
# OPENAI_API_KEY=
# OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4.1-mini

# セキュリティ設定
SECRET_KEY=your-secret-key-here-change-in-production
SANDBOX_ROOT=/workspace

# プロアクティブ設定
PROACTIVE_MODE=reactive
MAX_FREQUENCY_PER_HOUR=3
COOLDOWN_MINUTES=15
DND_HOURS=[22,23,0,1,2,3,4,5,6]

# ロギング設定
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

